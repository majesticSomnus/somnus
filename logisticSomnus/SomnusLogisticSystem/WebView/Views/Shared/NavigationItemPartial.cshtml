        <ul class="vlist">
            <li>
                @Html.ActionLink("添加运输记录", "create", "transport")
            </li>
        </ul>
            }
            if (action.Equals("edit"))
            { 
        <ul class="vlist">
            <li class="active"><span>修改运输记录</span> </li>
        </ul>
            }
