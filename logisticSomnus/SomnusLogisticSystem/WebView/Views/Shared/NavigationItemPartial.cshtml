            <li>
                @Html.ActionLink("添加费用记录", "create", "cost")
            </li>
        </ul>
            }
                        if (action.Equals("chart"))
            { 
        <ul class="vlist">
            <li class="active"><span>费用报表</span> </li>
        </ul>
            }
            else
            { 
        <ul class="vlist">
            <li>
                @Html.ActionLink("费用报表", "chart", "cost")
            </li>
        </ul>
