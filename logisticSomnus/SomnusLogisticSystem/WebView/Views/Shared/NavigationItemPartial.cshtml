@{
    string control = string.IsNullOrEmpty(@PageData["control"]) ? string.Empty : (@PageData["control"] as string).ToLower();
    string action = string.IsNullOrEmpty(@PageData["action"]) ? string.Empty : (@PageData["action"] as string).ToLower();
}
<div id="col1_content" class="clearfix">
    @switch (control)
    {
        case "userinfo":
            if (action.Equals("index"))
            {
        <ul class="vlist">
            <li class="active"><span>用户列表</span> </li>
        </ul>
            }
            else
            { 
        <ul class="vlist">
            <li>
                @Html.ActionLink("用户列表", "index", "userInfo")
            </li>
        </ul>
            }
            if (action.Equals("adduserinfo"))
            { 
        <ul class="vlist">
            <li class="active"><span>添加用户</span> </li>
        </ul>
            }
            else
            { 
        <ul class="vlist">
            <li>
                @Html.ActionLink("添加用户", "addUserInfo", "userInfo")
            </li>
        </ul>
            }
            if (action.Equals("edituserinfo"))
            { 
        <ul class="vlist">
            <li class="active"><span>修改用户</span> </li>
        </ul>
            }
            if (action.Equals("changepassword"))
            { 
        <ul class="vlist">
            <li class="active"><span>修改密码</span> </li>
        </ul>
            }
            else
            { 
        <ul class="vlist">
            <li>
                @Html.ActionLink("修改密码", "changePassword", "userInfo")
            </li>
        </ul>
            }
            break;
